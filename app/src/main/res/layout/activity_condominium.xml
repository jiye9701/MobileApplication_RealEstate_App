<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <CheckBox
        android:id="@+id/checkBoxCondo1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/condo1"
        android:onClick="onCheckboxClicked"
        android:text="Gibson Sq South Tower" />

    <CheckBox
        android:id="@+id/checkBoxCondo2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/condo2"
        android:onClick="onCheckboxClicked"
        android:text="Bay Street Corridor" />

    <CheckBox
        android:id="@+id/checkBoxCondo3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/condo3"
        android:onClick="onCheckboxClicked"
        android:text="Henry Farm" />

    <CheckBox
        android:id="@+id/checkBoxCondo4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/condo4"
        android:onClick="onCheckboxClicked"
        android:text="Waterfront Communities C1" />


    <Button
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickNext"
        android:text="Check Out"
        android:layout_marginTop="50dp"/>
</LinearLayout>