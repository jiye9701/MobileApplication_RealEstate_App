<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <CheckBox
        android:id="@+id/checkBoxtownhouse1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/town1"
        android:onClick="onCheckboxClicked"
        android:text="950 Dundas Street East #30003" />


    <CheckBox
        android:id="@+id/checkBoxtownhouse2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/town2"
        android:onClick="onCheckboxClicked"
        android:text="306 Bleecker Street" />


    <Button
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickNext"
        android:text="Check Out"
        android:layout_marginTop="50dp"/>
</LinearLayout>